# Panel Configuration
PANEL_PORT=8000
PANEL_HOST=0.0.0.0
HTTPS_ENABLED=false
DOCS_ENABLED=true

# Nginx Reverse Proxy (when using the https profile)
SMITE_HTTP_PORT=80
SMITE_HTTPS_PORT=443
SMITE_SSL_DOMAIN=REPLACE_DOMAIN
# Uncomment to override the upstream panel URL (defaults to http://127.0.0.1:${PANEL_PORT})
# SMITE_PANEL_UPSTREAM=http://127.0.0.1:8000


# Database
DB_TYPE=sqlite
DB_PATH=./data/smite.db
# MySQL (if DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=smite
# DB_USER=smite
# DB_PASSWORD=changeme

# Hysteria2 Control Channel
HYSTERIA2_PORT=443
HYSTERIA2_CERT_PATH=./certs/ca.crt
HYSTERIA2_KEY_PATH=./certs/ca.key

# Node Configuration (for node/.env)
NODE_API_PORT=8888
PANEL_CA_PATH=/path/to/panel/ca.crt
PANEL_ADDRESS=panel.example.com:443

# Security
SECRET_KEY=changeme-secret-key-change-in-production

